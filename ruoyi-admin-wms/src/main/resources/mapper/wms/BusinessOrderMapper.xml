<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.wms.mapper.BusinessOrderMapper">
    <resultMap id="OrderResMap" type="com.ruoyi.wms.domain.vo.businessorder.BusinessOrderVo">
        <id property="id" column="order_id" />
        <result property="type" column="type" />
        <result property="status" column="status" />
        <result property="remark" column="remark" />
        <result property="totalAmount" column="total_amount" />
        <result property="createTime" column="create_time" />

        <association property="user" javaType="com.ruoyi.wms.domain.vo.OptionItemVo" column="user_id" select="selectUser" />

        <collection property="merchandises" ofType="com.ruoyi.wms.domain.vo.MerchandiseVo"
                    select="selectMerchandiseList" column="order_id"/>
    </resultMap>

    <resultMap id="MerchandiseResMap" type="com.ruoyi.wms.domain.vo.MerchandiseVo">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="fnsku" column="fnsku" />
        <result property="asin" column="asin" />
        <result property="size" column="size" />
        <result property="color" column="color" />
        <result property="type" column="type" />
        <result property="image" column="image" />
        <result property="price" column="price" />
        <result property="quantityRequired" column="quantity_required" />
        <result property="quantityShipped" column="quantity_shipped" />
        <result property="quantityNotice" column="quantity_notice" />
        <result property="labelOption" column="label_option" />
    </resultMap>

    <resultMap id="UserOptionResMap" type="com.ruoyi.wms.domain.vo.OptionItemVo">
        <id property="value" column="user_id" />
        <result property="key" column="user_name" />
    </resultMap>

    <resultMap id="DeliveryMethodOptionResMap" type="com.ruoyi.wms.domain.vo.OptionItemVo">
        <id property="value" column="id" />
        <result property="key" column="name" />
    </resultMap>

    <resultMap id="OrderDetailResMap" type="com.ruoyi.wms.domain.vo.businessorder.BusinessOrderDetailVo">
        <id property="id" column="order_id" />
        <result property="type" column="type" />
        <result property="status" column="status" />
        <result property="remark" column="remark" />
        <result property="totalAmount" column="total_amount" />
        <result property="createTime" column="create_time" />

        <association property="user" javaType="com.ruoyi.wms.domain.vo.OptionItemVo" column="user_id" select="selectUser" />

        <collection property="merchandises" ofType="com.ruoyi.wms.domain.vo.MerchandiseVo"
                    select="selectMerchandiseListByOrderId" column="order_id"/>
        <collection property="shipmentNotices" ofType="com.ruoyi.wms.domain.vo.shipmentnotice.ShipmentNoticeOrderDetailVo"
                    select="selectShipmentNoticeByOrderId" column="order_id" />
    </resultMap>

    <resultMap id="ShipmentNoticeResMap" type="com.ruoyi.wms.domain.vo.shipmentnotice.ShipmentNoticeOrderDetailVo">
        <id property="id" column="shipment_notice_id" />
        <result property="tag" column="tag" />
        <result property="status" column="status" />
        <result property="createTime" column="create_time" />

        <association property="deliveryMethodItem" javaType="com.ruoyi.wms.domain.vo.OptionItemVo" column="delivery_method" select="selectDeliveryMethodItem" />

        <collection property="merchandises" ofType="com.ruoyi.wms.domain.vo.MerchandiseVo"
                    select="selectMerchandiseListByShipmentNoticeId" column="shipment_notice_id"/>
    </resultMap>


    <sql id="selectMerchandiseSql">
        select
            om.quantity_required,
            m.*,
            m.id as m_id,
            om.label_option
        from order_merchandise om
        inner join merchandise m on m.id = om.merchandise_id
    </sql>

    <select id="selectMerchandiseList" resultMap="MerchandiseResMap">
        select
            om.quantity_required,
            m.*,
            m.id as m_id,
            om.label_option
        from order_merchandise om
        inner join merchandise m on m.id = om.merchandise_id
        where om.order_id = #{order_id}
    </select>

    <select id="selectMerchandiseListByOrderId" resultMap="MerchandiseResMap">
        select distinct
            m.*,
            om.label_option,
            om.quantity_required,
            om.quantity_notice,
            sqs.quantity_shipped
        from (
            select
                order_id,
                merchandise_id,
                sum(om2.quantity_shipped) quantity_shipped
            from order_merchandise om2
            where om2.order_id = #{order_id}
            group by om2.merchandise_id,om2.order_id
        ) sqs
        inner join order_merchandise om on om.order_id = sqs.order_id and sqs.merchandise_id = om.merchandise_id
        inner join merchandise m on m.id = sqs.merchandise_id
        inner join business_order bo on bo.id = sqs.order_id
    </select>

    <select id="selectMerchandiseListByShipmentNoticeId" resultMap="MerchandiseResMap">
        select
            m.*,
            om.label_option,
            om.quantity_required,
            om.quantity_notice
        from shipment_notice sn
        inner join order_merchandise om on om.shipment_notice_id = sn.id
        inner join merchandise m on m.id = om.merchandise_id
        where sn.id = #{shipment_notice_id}
    </select>

    <select id="selectDeliveryMethodItem" resultMap="DeliveryMethodOptionResMap">
        select
            name,
            id
        from logistics_channel
        where id = #{delivery_method}
    </select>
    <select id="selectUser" resultMap="UserOptionResMap">
        select
            user_id,
            user_name
        from sys_user
        where user_id = #{user_id}
    </select>

    <select id="selectOrderList" resultMap="OrderResMap">
        select o.*, o.id as order_id
        from business_order o
        <where>
            <if test="bo.id != null and bo.id != ''">
                and o.id = #{bo.id}
            </if>
            <if test="bo.userId != null and bo.userId !='' ">
                and o.user_id = #{bo.userId}
            </if>
            <if test="bo.type != null and bo.type != ''">
                and o.type = #{bo.type}
            </if>
            <if test="bo.status != null and bo.status != ''">
                and o.status = #{bo.status}
            </if>
        </where>
    </select>

    <select id="selectOrderDetailById" resultMap="OrderDetailResMap" parameterType="Long">
        select
            *,
            id order_id
        from business_order
        where id = #{id}
    </select>

    <select id="selectShipmentNoticeByOrderId" resultMap="ShipmentNoticeResMap">
        select
            *,
            id shipment_notice_id
        from shipment_notice
        where order_id = #{order_id}
    </select>

</mapper>
